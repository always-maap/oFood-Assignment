{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@ofood/domain": ["./src/domain"],
      "@ofood/application": ["./src/application"],
      "@ofood/infrastructure": ["./src/infrastructure"],
      "@ofood/contracts": ["./src/contracts"]
    }
  },
  "include": [
    "src/presentation/**/*.ts",
    "src/domain/**/*.ts",
    "src/infrastructure/**/*.ts",
    "src/application/**/*.ts",
    "src/contracts/**/*.ts",
    "src/presentation/main.ts"
  ],
  "exclude": ["node_modules"]
}
